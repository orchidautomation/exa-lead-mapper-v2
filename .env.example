# Business Mapper API v2.0 Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here
DEBUG=False
HOST=0.0.0.0
PORT=8080

# Required API Keys
SERPER_API_KEY=your-serper-api-key-here
GROQ_API_KEY=your-groq-api-key-here
ADMIN_KEY=your-admin-key-here

# Database
DATABASE_PATH=./data/mapper.db

# Geocoding
GEOCODING_SERVICE=open-meteo

# Search Settings
DEFAULT_ZOOM=14
DEFAULT_MAX_PAGES=3
MAX_CONCURRENT_REQUESTS=5

# Cost Control
SEARCH_COST_SAFETY_THRESHOLD_USD=1.0

# AI Settings
AI_VALIDATION_ENABLED=True
AI_VALIDATION_MODEL=llama-3.1-8b-instant
AI_VALIDATION_TEMPERATURE=0.1

# Logging
LOG_LEVEL=INFO